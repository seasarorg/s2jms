<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE components PUBLIC "-//SEASAR//DTD S2Container 2.4//EN" 
	"http://www.seasar.org/dtd/components24.dtd">
<components>
	<include path="j2ee.dicon"/>
	<include path="jms-default-filter.dicon"/>

	<!-- リソースアダプタのデプロイ -->
	<component
		class="org.seasar.jca.deploy.impl.RarResourceAdapterDeployer"
	>
		<!-- スレッドプールのスレッド数 -->
		<arg>10</arg>

		<!-- ActiveMQ ResourceAdapter へのパス -->
		<property name="path">
			"ra/activemq-rar-4.1.1.rar"
		</property>

		<!-- ActiveMQ Broker のURL -->
		<initMethod name="setProperty">
			<arg>"ServerUrl"</arg>
			<arg>"tcp://localhost:61616"</arg>
		</initMethod>
	</component>

	<!-- メッセージエンドポイントのデプロイ -->
	<component
		class="org.seasar.jca.deploy.impl.MessageEndpointDeployer"
	>
		<property name="activationSpecClassName">
			"org.apache.activemq.ra.ActiveMQActivationSpec"
		</property>

		<!--
			ActiveMQのプロパティを設定します．
			設定可能なプロパティは
				http://activemq.codehaus.org/Activation+Spec+Properties
			を参照してください．
		-->
		<!-- 受信するデスティネーションを設定します -->
		<initMethod name="setProperty">
			<arg>"destination"</arg>
			<arg>"Foo"</arg><!-- デスティネーションの名前 (キュー名またはトピック名) に変更してください -->
		</initMethod>

		<!-- 受信するデスティネーションの種類 (キューまたはトピック) を指定します -->
		<initMethod name="setProperty">
			<arg>"destinationType"</arg>
			<arg>"javax.jms.Queue"</arg><!-- デスティネーションの種類に合わせて変更してください -->
		</initMethod>
	</component>
	<component
		class="org.seasar.jca.inbound.MessageEndpointFactoryImpl"
	>
		<!-- メッセージをトランザクショナルに受信する場合は true を指定します -->
		<property name="deliveryTransacted">true</property>
	</component>

	<!-- S2JMS-Container の設定 -->
	<component class="org.seasar.jms.container.impl.JMSContainerImpl">
		<!-- アプリケーション固有のメッセージリスナ・コンポーネントの名前を指定します (複数指定可) -->
		<initMethod name="addMessageListener">
			<arg>"echoListener"</arg>
		</initMethod>
	</component>
</components>
