<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE components PUBLIC "-//SEASAR//DTD S2Container 2.4//EN" 
	"http://www.seasar.org/dtd/components24.dtd">
<components>
	<include path="j2ee.dicon"/>

	<!-- リソースアダプタのデプロイ -->
	<component
		class="org.seasar.jca.deploy.impl.RarResourceAdapterDeployer"
	>
		<!-- スレッドプールのスレッド数 -->
		<arg>10</arg>

		<!-- ActiveMQ ResourceAdapter へのパス -->
		<property name="path">
			"ra/activemq-rar-4.1.1.rar"
		</property>

		<!-- 埋め込み (インプロセス) の ActiveMQ Broker を使用する場合 -->
		<initMethod name="setProperty">
			<arg>"BrokerXmlConfig"</arg>
			<arg>"broker:(tcp://localhost:61616)?persistent=false&amp;useJmx=false"</arg>
		</initMethod>
		<!-- 外部の ActiveMQ Broker を使用する場合 -->
		<!--
		<initMethod name="setProperty">
			<arg>"ServerUrl"</arg>
			<arg>"tcp://localhost:61616"</arg>
		</initMethod>
		-->
	</component>
</components>
