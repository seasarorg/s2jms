	<resourceadapter>
		<config-property>    
			<config-property-name>ConnectionFactoryName</config-property-name>
			<config-property-type>java.lang.String</config-property-type>
			<config-property-value>java:comp/env/jms/ConnectionFactory</config-property-value>
		</config-property>

		<resourceadapter-class>
			org.seasar.jms.connector.ra.JMSResourceAdapter
		</resourceadapter-class>

		<outbound-resourceadapter>
			<connection-definition>
				<managedconnectionfactory-class>
					org.seasar.jms.connector.mcf.ManagedConnectionFactoryImpl
				</managedconnectionfactory-class>
				<connectionfactory-interface>
					javax.jms.ConnectionFactory
				</connectionfactory-interface>
				<connectionfactory-impl-class>
					org.seasar.jms.connector.cf.ConnectionFactoryImpl
				</connectionfactory-impl-class>
				<connection-interface>
					javax.jms.Connection
				</connection-interface>
				<connection-impl-class>
					org.seasar.jms.connector.ch.ConnectionHandleImpl
				</connection-impl-class>
			</connection-definition>

			<connection-definition>
				<managedconnectionfactory-class>
					org.seasar.jms.connector.mcf.QueueManagedConnectionFactoryImpl
				</managedconnectionfactory-class>
				<connectionfactory-interface>
					javax.jms.QueueConnectionFactory
				</connectionfactory-interface>
				<connectionfactory-impl-class>
					org.seasar.jms.connector.cf.QueueConnectionFactoryImpl
				</connectionfactory-impl-class>
				<connection-interface>
					javax.jms.QueueConnection
				</connection-interface>
				<connection-impl-class>
					org.seasar.jms.connector.ch.QueueConnectionHandleImpl
				</connection-impl-class>
			</connection-definition>

			<connection-definition>
				<managedconnectionfactory-class>
					org.seasar.jms.connector.mcf.TopicManagedConnectionFactoryImpl
				</managedconnectionfactory-class>
				<connectionfactory-interface>
					javax.jms.TopicConnectionFactory
				</connectionfactory-interface>
				<connectionfactory-impl-class>
					org.seasar.jms.connector.cf.TopicConnectionFactoryImpl
				</connectionfactory-impl-class>
				<connection-interface>
					javax.jms.TopicConnection
				</connection-interface>
				<connection-impl-class>
					org.seasar.jms.connector.ch.TopicConnectionHandleImpl
				</connection-impl-class>
			</connection-definition>

			<transaction-support>LocalTransaction</transaction-support>
			<authentication-mechanism>
				<authentication-mechanism-type>BasicPassword</authentication-mechanism-type>
				<credential-interface>javax.resource.spi.security.PasswordCredential</credential-interface>
			</authentication-mechanism>
			<reauthentication-support>false</reauthentication-support>
		</outbound-resourceadapter>

		<outbound-resourceadapter>
			<connection-definition>
				<managedconnectionfactory-class>
					org.seasar.jms.connector.mcf.XAManagedConnectionFactoryImpl
				</managedconnectionfactory-class>
				<connectionfactory-interface>
					javax.jms.ConnectionFactory
				</connectionfactory-interface>
				<connectionfactory-impl-class>
					org.seasar.jms.connector.cf.ConnectionFactoryImpl
				</connectionfactory-impl-class>
				<connection-interface>
					javax.jms.Connection
				</connection-interface>
				<connection-impl-class>
					org.seasar.jms.connector.ch.ConnectionHandleImpl
				</connection-impl-class>
			</connection-definition>

			<connection-definition>
				<managedconnectionfactory-class>
					org.seasar.jms.connector.mcf.XAQueueManagedConnectionFactoryImpl
				</managedconnectionfactory-class>
				<connectionfactory-interface>
					javax.jms.QueueConnectionFactory
				</connectionfactory-interface>
				<connectionfactory-impl-class>
					org.seasar.jms.connector.cf.QueueConnectionFactoryImpl
				</connectionfactory-impl-class>
				<connection-interface>
					javax.jms.QueueConnection
				</connection-interface>
				<connection-impl-class>
					org.seasar.jms.connector.ch.QueueConnectionHandleImpl
				</connection-impl-class>
			</connection-definition>

			<connection-definition>
				<managedconnectionfactory-class>
					org.seasar.jms.connector.mcf.XATopicManagedConnectionFactoryImpl
				</managedconnectionfactory-class>
				<connectionfactory-interface>
					javax.jms.TopicConnectionFactory
				</connectionfactory-interface>
				<connectionfactory-impl-class>
					org.seasar.jms.connector.cf.TopicConnectionFactoryImpl
				</connectionfactory-impl-class>
				<connection-interface>
					javax.jms.TopicConnection
				</connection-interface>
				<connection-impl-class>
					org.seasar.jms.connector.ch.TopicConnectionHandleImpl
				</connection-impl-class>
			</connection-definition>

			<transaction-support>XATransaction</transaction-support>
			<authentication-mechanism>
				<authentication-mechanism-type>BasicPassword</authentication-mechanism-type>
				<credential-interface>javax.resource.spi.security.PasswordCredential</credential-interface>
			</authentication-mechanism>
			<reauthentication-support>false</reauthentication-support>
		</outbound-resourceadapter>
	</resourceadapter>
</connector>
